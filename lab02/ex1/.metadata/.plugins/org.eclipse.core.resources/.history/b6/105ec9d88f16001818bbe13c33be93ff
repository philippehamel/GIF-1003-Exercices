#include <iostream>
using namespace std;

int main() {
	int n;
	do{
		cout<<"Entrez un entier positif : "<<endl;
		cin>>n;
		cout<<"L'entier que vous avez choisi est : "<<n<<endl;
		}while(n<=0);
	cout<<"You chose wisely!"
}
